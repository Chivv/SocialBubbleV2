        "text": "*🌍 Language:*\n{{primaryLanguage}}"
      },
      {
        "type": "mrkdwn",
        "text": "*🎯 Source:*\n{{#equals signupSource 'import_invitation'}}📨 Invitation{{else}}🌱 Organic{{/equals}}"
